generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Customers {
  id     String   @id @map("_id") @db.ObjectId
  emails String[]

  @@map("customers")
}

model Users {
  id       String @id @map("_id")
  email    String @unique(map: "email_1")
  password String

  @@map("users")
}
