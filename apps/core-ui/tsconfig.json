      "erxes-ui": ["libs/erxes-ui/src"],
      "erxes-shared-states": ["libs/erxes-shared-states/src/index.ts"]
    }
  },
  "files": [],
  "include": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ],
  "extends": "../../tsconfig.base.json"
}
