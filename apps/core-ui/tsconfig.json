{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "paths": {
      "@/*": ["apps/core-ui/src/modules/*"], // for vscode
      "@": ["apps/core-ui/src/modules"], // for rspack
