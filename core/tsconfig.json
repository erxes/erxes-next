{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "paths": {
      "@/*": ["core/src/modules/*"], // for vscode
      "@": ["core/src/modules"], // for rspack
      "~/*": ["core/src/*"], // for vscode
      "~": ["core/src"], // for rspack
      "erxes-ui/*": ["packages/erxes-ui/src/*"],
      "erxes-ui": ["packages/erxes-ui/src"],
      "erxes-shared-states": ["packages/erxes-shared-states/src/index.ts"]
    }
  },
  "files": [],
  "include": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ],
    "extends": "../tsconfig.base.json"
}
