{
  "name": "core-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "backend/core-api/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "dependsOn": [],
      "cache": true,
      "options": {
        "outputPath": "dist/backend/core-api",
        "main": "backend/core-api/src/main.ts",
        "tsConfig": "backend/core-api/tsconfig.app.json",
        "assets": ["backend/core-api/src/**"]
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "core-api:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "core-api:build:development"
        },
        "production": {
          "buildTarget": "core-api:build:production"
        }
      }
    },
    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f backend/core-api/Dockerfile . -t core-api"
    }
  }
}
