# Run the container with `docker run -p 3000:3000 -t core-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3300

WORKDIR /app

RUN addgroup --system core-api && \
          adduser --system -G core-api core-api

COPY dist/backend/core-api core-api/
RUN chown -R core-api:core-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix core-api --omit=dev -f install

CMD [ "node", "core-api" ]
