{
  "name": "gateway",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "backend/gateway/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",

      "cache": true,
      "options": {
        "cwd": "backend/gateway",
        "commands": ["tsc --project tsconfig.build.json"]
      },
      "dependsOn": [
        "erxes-api-utils:build",
        "erxes-api-modules:build",
        "erxes-core-types:build",
        "erxes-api-rpc:build",
        "build:packageJson"
      ]
    },
    "build:packageJson": {
      "executor": "@nx/js:tsc",
      "options": {
        "main": "backend/gateway/dist/src/main.js",
        "tsConfig": "backend/gateway/tsconfig.json",
        "outputPath": "backend/gateway/dist",
        "updateBuildableProjectDepsInPackageJson": true,
        "buildableProjectDepsInPackageJsonType": "dependencies"
      }
    },
    "serve": {
      "executor": "nx:run-commands",

      "options": {
        "cwd": "backend/gateway",
        "command": "pnpm dev"
      }
    }
  },
  "tags": []
}
