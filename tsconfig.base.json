{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "erxes-api-utils": ["backend/libs/erxes-api-utils/src/index.ts"],
      "erxes-ui": ["frontend/libs/erxes-ui/src"],
      "erxes-ui-shared-states": [
        "frontend/libs/erxes-ui-shared-states/src/index.ts"
      ],
      "erxes-ui/*": ["frontend/libs/erxes-ui/src/*"],
      "inbox_ui/Module": ["frontend/plugins/inbox_ui/src/remote-entry.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
