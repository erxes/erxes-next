    "jsx": "react-jsx",
    "allowJs": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "paths": {
      "@/*": ["packages/erxes-core-ui/src/modules/*"], // for vscode
